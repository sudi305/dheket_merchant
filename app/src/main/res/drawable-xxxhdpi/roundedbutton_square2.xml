<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- default -->
    <item android:state_pressed="false">
        <layer-list >
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#a72b2b2b"
                        android:endColor="#a72c2c2c"
                        android:angle="-90"
                        android:type="linear"
                        />
                    <stroke
                        android:width="2dp"
                        android:color="#ffffff" >
                    </stroke>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list >
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#a7a9a7a7"
                        android:endColor="#a7dad9d9"
                        android:angle="-90"
                        android:type="linear"
                        />
                    <stroke
                        android:width="2dp"
                        android:color="#999999" >
                    </stroke>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>