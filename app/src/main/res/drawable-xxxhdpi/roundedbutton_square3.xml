<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- default -->
    <item android:state_pressed="false">
        <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#bcbcbc"
                        android:endColor="#c7c7c7"
                        android:angle="-90"
                        android:type="linear"
                        />
                    <corners android:radius="5dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#ffffff" >
                    </stroke>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#939393"
                        android:endColor="#737373"
                        android:angle="-90"
                        android:type="linear"
                        />
                    <corners android:radius="5dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#999999" >
                    </stroke>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>