<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingRight="4dp"
    android:paddingEnd="4dp"
    android:paddingLeft="4dp"
    android:paddingStart="4dp">
    <ImageView
        android:id="@+id/chat_contact_picture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/transparent"
        android:contentDescription="avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="4dp"
        android:paddingStart="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chat_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User 1"/>

            <TextView
                android:id="@+id/chat_contact_time"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:textSize="12sp"
                android:text="18:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chat_contact_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thank you. I have in my layout 3 areas (headers, content)"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/darkgreen"/>

            <TextView
                android:id="@+id/chat_contact_msg_count"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:text="10"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/darkred"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>